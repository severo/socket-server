{
  "name": "socket-server",
  "version": "1.0.0",
  "description": "Socket server for users collaboration on web applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/LyonDataViz/socket-server.git"
  },
  "main": "index.js",
  "scripts": {
    "lint": "tsc --noEmit",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-test": "npm run test -- --watch",
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "test": "NODE_ENV=test mocha",
    "coverage": "nyc npm run test",
    "release": "standard-version",
    "deploy": "git push heroku master"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "express": "^4.17.1",
    "nanoid": "^2.1.9",
    "randomcolor": "^0.5.4",
    "rate-limiter-flexible": "^1.3.1",
    "socket.io": "^2.3.0"
  },
  "engines": {
    "node": ">=12.13.1 <13"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^16.0.6",
    "@types/mocha": "^5.2.7",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^13.1.8",
    "@types/randomcolor": "^0.5.3",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^3.4.6",
    "chai": "^4.2.0",
    "concurrently": "^5.0.2",
    "heroku": "^7.36.2",
    "husky": "^4.0.10",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "~1.19.1",
    "pretty-quick": "~2.0.1",
    "socket.io-client": "^2.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "homepage": "https://github.com/LyonDataViz/socket-server#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "nyc": {
    "include": "src",
    "exclude": "**/*.spec.ts"
  }
}
